import java.lang.Thread;

class TimerThread extends Thread{
	int n = 0;
	@Override
	public void run() {
		while(true) {
			System.out.println(n++);
			try {
				sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}

public class Java_Thread_Timer {
	public static void main(String[] args) {
		TimerThread th = new TimerThread();
		th.start();
	}
}